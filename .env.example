# ContingentAI Environment Variables
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-to-something-random

# Database Configuration
# For local development with SQLite:
DATABASE_URL=sqlite:///contingent_ai.db

# For production with PostgreSQL (example):
# DATABASE_URL=postgresql://username:password@localhost:5432/contingent_ai

# For Railway/Render (they provide this automatically):
# DATABASE_URL=${DATABASE_URL}

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o  # or gpt-3.5-turbo for cheaper option

# Optional: Claude API (if you want to use Anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Email Configuration (optional, for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Logging (optional)
LOG_LEVEL=INFO

# Application Settings
MAX_WORKERS_DISPLAY=100
DEFAULT_CURRENCY=USD

# Security (for production)
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax
